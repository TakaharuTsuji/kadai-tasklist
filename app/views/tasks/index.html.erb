<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |tsk| %>
      <li><%= link_to tsk.id, tsk %> : <%= tsk.content %>　[<%= tsk.status %>]</li>
    <% end %>
  </ul>
  <%= link_to '新規タスク追加', new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to Task List</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-info' %>
    </div>
  </div>
<% end %>

