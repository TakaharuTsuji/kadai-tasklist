<h3>タスクの詳細</h3>
<table class="table table-striped table-bordered">
  <tr>
    <th>id</th>
    <td>No.<%= @task.id%></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
    </table>
<%= link_to 'タスク一覧に戻る', tasks_path, class: 'btn btn-info ml-4' %>
<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-info' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-dark' %>
